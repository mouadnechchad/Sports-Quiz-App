<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFF"
    android:padding="16dp">
    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="About Us"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsTitle"
        android:layout_marginTop="70dp"
        android:text="Welcome to our sports quiz app developed by Moud NECHCHAD and Manal ELKASSIMI. This app is designed to test your knowledge in various sports categories. Challenge yourself and have fun answering questions related to your favorite sports.\n\nOur mission is to provide an enjoyable and educational experience for sports enthusiasts. If you have any feedback or suggestions, feel free to contact us.\n\nThank you for using our app!"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/contactLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emailIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_email"
            android:contentDescription="Email Icon"/>

        <TextView
            android:id="@+id/contactInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact@sportsquizapp.com"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
