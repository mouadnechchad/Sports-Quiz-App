<!-- activity_question.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFF"
    android:padding="16dp">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your question?"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/questionImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>
    <!-- Add a TextView to display the correct answer -->
    <TextView
        android:id="@+id/correctAnswerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#008577"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/questionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
    <LinearLayout
        android:id="@+id/optionsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_marginTop="75dp"
        android:orientation="vertical">


        <!-- Options buttons... -->
        <Button
            android:id="@+id/option1Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:textColor="#FFFFFF"
            android:background="#008577"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/option2Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textColor="#FFFFFF"
            android:background="#008577"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/option3Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textColor="#FFFFFF"
            android:background="#008577"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/option4Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:textColor="#FFFFFF"
            android:background="#008577"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</RelativeLayout>
